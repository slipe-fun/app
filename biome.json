{
    "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
    "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
    },
    "files": {
      "ignoreUnknown": false,
      "ignore": [
        "node_modules/**",
        "android/**",
        "ios/**"
      ]
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "style": {
          "useSingleVarDeclarator": "error"
        }
      }
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "double"
      }
    },
    "assist": {
      "enabled": true,
      "actions": {
        "source": {
          "organizeImports": "on"
        }
      }
    }
  }
  